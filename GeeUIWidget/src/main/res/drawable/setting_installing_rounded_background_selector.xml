<?xml version="1.0" encoding="utf-8"?>
<!-- rounded_background_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 非按下状态 -->
    <item android:state_pressed="false"  android:color="@color/white60">
        <shape android:shape="rectangle">
            <corners android:radius="32.5px" /> <!-- 设置圆角半径，这里是12dp -->
            <solid android:color="@color/white60" /> <!-- 设置非按下状态的背景颜色 -->
        </shape>

    </item>
    <!-- 按下状态 -->
    <item android:state_pressed="true" android:color="@color/white60">
        <shape android:shape="rectangle">
            <corners android:radius="32.5px" /> <!-- 设置圆角半径，这里是12dp -->
            <solid android:color="@color/white60" /> <!-- 设置按下状态的背景颜色 -->
        </shape>
    </item>
</selector>
